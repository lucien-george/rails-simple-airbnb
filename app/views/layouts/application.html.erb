<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link href='https://api.mapbox.com/mapbox-gl-js/v0.50.0/mapbox-gl.css' rel='stylesheet' />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <%= link_to "Home", flats_path, class:"navbar-links" %>

      <div class="right-navbar">
        <%= form_tag(search_path, class:"form-inline") do %>
          <%= text_field_tag(:search_name, "", placeholder: "Search", class:"form-control") %>
          <%= submit_tag("Search", class:"btn btn-primary") %>
        <% end %>
        <%= link_to "Add Flat", new_flat_path, class:"navbar-links" %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
